# ========================================
# MediTrack - Production Environment
# ========================================
# این فایل برای محیط production استفاده می‌شود
# مقادیر واقعی و امن را وارد کنید

# ========================================
# Supabase Configuration (ضروری)
# ========================================
# از پنل Supabase > Settings > API کپی کنید
NEXT_PUBLIC_SUPABASE_URL=https://your-production-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.production.anon_key
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.production.service_role_key

# ========================================
# Next.js Configuration
# ========================================
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.com

# ========================================
# Authentication
# ========================================
# کلید امن و تصادفی برای production
JWT_SECRET=production-super-secure-jwt-key-64-chars-long-random-string

# ========================================
# Security
# ========================================
# کلید امن برای session
SESSION_SECRET=production-super-secure-session-key-64-chars-long

# ========================================
# Performance & Caching
# ========================================
# برای کش Redis (اختیاری)
# REDIS_URL=redis://your-redis-server:6379
CACHE_TTL=3600

# ========================================
# Monitoring & Analytics
# ========================================
# Google Analytics
NEXT_PUBLIC_GA_ID=G-PRODUCTION-GA-ID

# برای monitoring (اختیاری)
# SENTRY_DSN=https://your-sentry-dsn

# ========================================
# File Upload (ضروری برای production)
# ========================================
# برای آپلود تصاویر داروها
NEXT_PUBLIC_UPLOAD_URL=https://your-upload-service.com
UPLOAD_API_KEY=your_production_upload_api_key

# ========================================
# Notifications (ضروری برای production)
# ========================================
# برای Push Notifications
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_production_vapid_public_key
VAPID_PRIVATE_KEY=your_production_vapid_private_key

# ========================================
# External APIs (اختیاری)
# ========================================
# برای دریافت اطلاعات داروها
DRUG_API_KEY=your_production_drug_api_key
DRUG_API_URL=https://api.production.com/drugs

# ========================================
# Logging
# ========================================
LOG_LEVEL=warn
DEBUG=false

# ========================================
# Rate Limiting (اختیاری)
# ========================================
# برای محدود کردن درخواست‌ها
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100 