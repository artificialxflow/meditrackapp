# ========================================
# MediTrack - Local Development Environment
# ========================================
# این فایل برای توسعه محلی استفاده می‌شود
# مقادیر واقعی Supabase خود را وارد کنید

# ========================================
# Supabase Configuration (ضروری)
# ========================================
# از پنل Supabase > Settings > API کپی کنید
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.example.anon_key
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.example.service_role_key

# ========================================
# Next.js Configuration
# ========================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ========================================
# Authentication
# ========================================
# یک کلید تصادفی 32 کاراکتری ایجاد کنید
JWT_SECRET=your-super-secret-jwt-key-32-chars-long

# ========================================
# Security
# ========================================
# یک کلید تصادفی برای session
SESSION_SECRET=another-super-secret-session-key

# ========================================
# Development Tools
# ========================================
DEBUG=meditrack:*
LOG_LEVEL=debug

# ========================================
# Optional Features (می‌توانید بعداً اضافه کنید)
# ========================================

# برای آپلود تصاویر (اختیاری)
# NEXT_PUBLIC_UPLOAD_URL=https://your-upload-service.com
# UPLOAD_API_KEY=your_upload_api_key

# برای Analytics (اختیاری)
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# برای Push Notifications (اختیاری)
# NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key
# VAPID_PRIVATE_KEY=your_vapid_private_key

# برای API های خارجی (اختیاری)
# DRUG_API_KEY=your_drug_api_key
# DRUG_API_URL=https://api.example.com/drugs 