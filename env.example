# ========================================
# MediTrack - Environment Variables Template
# ========================================
# این فایل قالب متغیرهای محیطی مورد نیاز پروژه است
# کپی کنید و نام آن را به .env.local تغییر دهید
# سپس مقادیر واقعی را وارد کنید

# ========================================
# Supabase Configuration
# ========================================
# URL پروژه Supabase شما
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url

# کلید عمومی (anon key) Supabase
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# کلید سرویس (service role key) Supabase - فقط برای server-side
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ========================================
# Next.js Configuration
# ========================================
# محیط اجرا (development, production, test)
NODE_ENV=development

# URL پایه اپلیکیشن
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ========================================
# Authentication
# ========================================
# کلید رمزنگاری برای JWT
JWT_SECRET=your_jwt_secret_key_here

# ========================================
# Database
# ========================================
# URL اتصال مستقیم به دیتابیس (اختیاری)
DATABASE_URL=your_direct_database_url

# ========================================
# File Upload (اختیاری)
# ========================================
# برای آپلود تصاویر داروها
NEXT_PUBLIC_UPLOAD_URL=your_upload_service_url
UPLOAD_API_KEY=your_upload_api_key

# ========================================
# Analytics (اختیاری)
# ========================================
# Google Analytics
NEXT_PUBLIC_GA_ID=your_google_analytics_id

# ========================================
# Notifications (اختیاری)
# ========================================
# برای Push Notifications
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key

# ========================================
# External APIs (اختیاری)
# ========================================
# برای دریافت اطلاعات داروها
DRUG_API_KEY=your_drug_api_key
DRUG_API_URL=https://api.example.com/drugs

# ========================================
# Security
# ========================================
# کلید رمزنگاری برای session
SESSION_SECRET=your_session_secret_key

# ========================================
# Development Tools (اختیاری)
# ========================================
# برای debug و logging
DEBUG=meditrack:*
LOG_LEVEL=info

# ========================================
# Performance (اختیاری)
# ========================================
# تنظیمات کش
REDIS_URL=your_redis_url
CACHE_TTL=3600

# ========================================
# Testing (اختیاری)
# ========================================
# برای تست‌ها
TEST_DATABASE_URL=your_test_database_url
TEST_SUPABASE_URL=your_test_supabase_url 